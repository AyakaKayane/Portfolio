<!DOCTYPE html>
<html>
  <head>
    <title>CAMP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="header">
        <div class="wrap">
          <h1><%= link_to("CAMP", "/") %></h1>

          <div class="menu">
            <% if logged_in? %>
              <%= link_to(current_user.name, "/users/#{current_user.id}") %>
                <a>
                  <%= link_to("ユーザー一覧", "/users/index") %>
                </a>
                <a>
                  <%= link_to("新規投稿", "/posts/new") %>
                </a>
                <a>
                  <%= link_to("ログアウト", logout_path, method: :delete) %>
              <% else %>
                <a>
                  <%= link_to("ログイン","sessions/new") %>
                </a>
                <a>
                  <%= link_to("新規登録", "/signup") %>
                </a>
            <% end %>
          </div>
        </div>
      </header>
      
      <div class="kensaku">
        <%= form_tag({controller: :home, action: :search}, { method: :get})do %>
          <tr class="kensaku2">
            <%= text_field_tag :search, placeholder="アイテム名", {class: "itemkensaku"}%>
            <%= submit_tag '検索', {class: "tg"}%> 
          </tr>
        <% end %>
      </div>
    <%= yield %>
  </body>
</html>
